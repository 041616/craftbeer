.slogan
    display: inline-block
    margin-bottom: 26px
    font-size: 2em
    font-style: italic
    font-weight: 300
    opacity: 0.5
    transition: all 0.2s ease-out
    @media $max-768
        margin-bottom: 0
        vertical-align: middle
    @media $max-580
        font-size: 1.5em
        width: 160px
