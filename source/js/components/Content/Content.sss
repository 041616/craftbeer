.content
    overflow: hidden
    padding: 0 20px
    background: url('img/bg.jpg') 50% 0 repeat-x
    background-size: auto 92vh
    box-shadow: inset 0 50px 20px -20px $base-background-color, inset 0 -50px 20px -20px $base-background-color


.container
    max-width: $max-width
    height: 100%
    margin: 0 auto
    box-shadow: 0 0 10px 25px rgba($base-background-color, 0.6)
    background-color: rgba($base-background-color, 0.6)
